{
  "name": "setup-stack",
  "version": "0.1.0",
  "private": true,
  "description": "setup stack action",
  "main": "lib/setup-stack.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "action": "node ./lib/setup-stack.js",
    "prune": "npm prune --production && git add --force node_modules && git commit -m \"Husky commit correct node modules\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matsubara0507/setup-stack.git"
  },
  "keywords": [
    "actions",
    "haskell",
    "setup"
  ],
  "author": "MATSUBARA Nobutada",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/io": "1.0.2",
    "@actions/tool-cache": "1.3.3"
  },
  "devDependencies": {
    "@types/node": "^12.7.5",
    "husky": "^2.3.0",
    "prettier": "^1.17.1",
    "typescript": "^3.6.3"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format"
    }
  }
}
